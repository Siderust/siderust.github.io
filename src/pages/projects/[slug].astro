---
/**
 * Project Detail Page
 * 
 * Dynamic route for individual project pages.
 */
import Layout from '../../layouts/Layout.astro';
import siteConfig from '../../site.config';
import { 
  getRepoMetadata, 
  formatDate, 
  formatRelativeTime, 
  getStatusColor, 
  getStatusLabel 
} from '../../lib/github';

// Generate static paths for all projects
export async function getStaticPaths() {
  return siteConfig.projects.map((project) => ({
    params: { slug: project.repo },
  }));
}

const { slug } = Astro.params;

// Fetch detailed metadata including README
const project = await getRepoMetadata(slug as string, true);

// Get other projects for "More projects" section
const otherProjects = siteConfig.projects
  .filter(p => p.repo !== slug)
  .slice(0, 2);
---

<Layout 
  title={project.displayName}
  description={project.description}
  type="article"
>
  <!-- Header Section -->
  <section class="py-12 md:py-16 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-950">
    <div class="container-custom">
      <!-- Breadcrumb -->
      <nav class="mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
          <li>
            <a href="/" class="hover:text-gray-900 dark:hover:text-white transition-colors">Home</a>
          </li>
          <li aria-hidden="true">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            <a href="/projects" class="hover:text-gray-900 dark:hover:text-white transition-colors">Projects</a>
          </li>
          <li aria-hidden="true">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li aria-current="page" class="text-gray-900 dark:text-white font-medium">
            {project.displayName}
          </li>
        </ol>
      </nav>

      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
        <div class="flex-1">
          <!-- Title & Status -->
          <div class="flex flex-wrap items-center gap-3">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
              {project.displayName}
            </h1>
            <span class:list={['badge', getStatusColor(project.status)]}>
              {getStatusLabel(project.status)}
            </span>
          </div>

          <!-- Description -->
          <p class="mt-4 text-lg text-gray-600 dark:text-gray-400 max-w-2xl">
            {project.description}
          </p>

          <!-- Stats -->
          <div class="mt-6 flex flex-wrap items-center gap-6 text-sm text-gray-600 dark:text-gray-400">
            <div class="flex items-center gap-2" title={`${project.stars} stars`}>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
              <span><strong>{project.stars}</strong> stars</span>
            </div>

            <div class="flex items-center gap-2" title={`${project.forks} forks`}>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
              </svg>
              <span><strong>{project.forks}</strong> forks</span>
            </div>

            {project.language && (
              <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-rust-500" aria-hidden="true"></span>
                <span>{project.language}</span>
              </div>
            )}

            {project.license && (
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                </svg>
                <span>{project.license}</span>
              </div>
            )}

            <div class="flex items-center gap-2" title={`Last updated ${formatRelativeTime(project.lastUpdated)}`}>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Updated {formatRelativeTime(project.lastUpdated)}</span>
            </div>
          </div>
        </div>

        <!-- Action buttons -->
        <div class="flex flex-wrap gap-3 lg:shrink-0">
          <a
            href={project.repoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            View on GitHub
          </a>

          {project.docsUrl && (
            <a
              href={project.docsUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              Documentation
            </a>
          )}

          {project.crateUrl && (
            <a
              href={project.crateUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
              crates.io
            </a>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16 bg-white dark:bg-gray-950">
    <div class="container-custom">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main content column -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Why it exists -->
          {project.purpose && (
            <div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Why it exists</h2>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                {project.purpose}
              </p>
            </div>
          )}

          <!-- Key features -->
          {project.features.length > 0 && (
            <div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Key Features</h2>
              <ul class="grid sm:grid-cols-2 gap-3">
                {project.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-green-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600 dark:text-gray-400">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Getting started -->
          {project.gettingStarted && (
            <div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Getting Started</h2>
              <div class="relative">
                <pre class="code-block overflow-x-auto"><code>{project.gettingStarted}</code></pre>
                <button
                  type="button"
                  class="copy-btn absolute top-3 right-3 p-2 rounded-md bg-gray-800 hover:bg-gray-700 text-gray-400 hover:text-white transition-colors"
                  data-code={project.gettingStarted}
                  title="Copy to clipboard"
                >
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                </button>
              </div>
            </div>
          )}

          <!-- Contributing -->
          <div id="contributing">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Contributing</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              We welcome contributions! Here's how you can help:
            </p>
            <ul class="space-y-3 text-gray-600 dark:text-gray-400">
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900/30 text-brand-600 dark:text-brand-400 flex items-center justify-center text-sm font-medium shrink-0">1</span>
                <span>Fork the repository and create your branch from <code>main</code></span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900/30 text-brand-600 dark:text-brand-400 flex items-center justify-center text-sm font-medium shrink-0">2</span>
                <span>Make your changes and add tests if applicable</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900/30 text-brand-600 dark:text-brand-400 flex items-center justify-center text-sm font-medium shrink-0">3</span>
                <span>Ensure all tests pass with <code>cargo test</code></span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900/30 text-brand-600 dark:text-brand-400 flex items-center justify-center text-sm font-medium shrink-0">4</span>
                <span>Submit a pull request with a clear description</span>
              </li>
            </ul>
            <div class="mt-6">
              <a
                href={`${project.repoUrl}/issues`}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-ghost text-brand-600 dark:text-brand-400"
              >
                View open issues
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>

          <!-- License -->
          <div>
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">License</h2>
            <p class="text-gray-600 dark:text-gray-400">
              {project.license ? (
                <>
                  This project is licensed under the <strong>{project.license}</strong> license.
                  See the <a href={`${project.repoUrl}/blob/main/LICENSE`} target="_blank" rel="noopener noreferrer" class="link">LICENSE</a> file for details.
                </>
              ) : (
                <>
                  Please check the <a href={project.repoUrl} target="_blank" rel="noopener noreferrer" class="link">repository</a> for license information.
                </>
              )}
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <!-- Quick links card -->
            <div class="card p-6">
              <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Quick Links</h3>
              <ul class="space-y-3">
                <li>
                  <a
                    href={project.repoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                    Repository
                  </a>
                </li>
                <li>
                  <a
                    href={`${project.repoUrl}/issues`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Issues ({project.openIssues})
                  </a>
                </li>
                {project.docsUrl && (
                  <li>
                    <a
                      href={project.docsUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                    >
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                      </svg>
                      Documentation
                    </a>
                  </li>
                )}
                {project.crateUrl && (
                  <li>
                    <a
                      href={project.crateUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                    >
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                      </svg>
                      crates.io
                    </a>
                  </li>
                )}
              </ul>
            </div>

            <!-- Release info card -->
            {project.latestRelease && (
              <div class="card p-6">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Latest Release</h3>
                <div class="flex items-center gap-3">
                  <span class="px-3 py-1 rounded-full bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-sm font-mono font-medium">
                    {project.latestRelease}
                  </span>
                  {project.releaseDate && (
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                      {formatDate(project.releaseDate)}
                    </span>
                  )}
                </div>
                {project.releaseUrl && (
                  <a
                    href={project.releaseUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="mt-4 inline-flex items-center gap-1 text-sm text-brand-600 dark:text-brand-400 hover:underline"
                  >
                    View release notes
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            )}

            <!-- Tags card -->
            {project.tags.length > 0 && (
              <div class="card p-6">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Tags</h3>
                <div class="flex flex-wrap gap-2">
                  {project.tags.map((tag) => (
                    <span class="px-2.5 py-1 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-xs">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- More Projects Section -->
  {otherProjects.length > 0 && (
    <section class="py-12 md:py-16 bg-gray-50 dark:bg-gray-900/50">
      <div class="container-custom">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white">More Projects</h2>
          <a href="/projects" class="btn-ghost text-brand-600 dark:text-brand-400">
            View all
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
        <div class="grid md:grid-cols-2 gap-6">
          {otherProjects.map(async (p) => {
            const metadata = await getRepoMetadata(p.repo);
            return (
              <a 
                href={`/projects/${p.repo}`}
                class="card p-6 flex items-start gap-4 hover:border-brand-500/50 transition-colors"
              >
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-500 to-rust-500 flex items-center justify-center text-white font-bold text-lg shrink-0">
                  {(p.name || p.repo).charAt(0).toUpperCase()}
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="font-semibold text-gray-900 dark:text-white">{p.name || p.repo}</h3>
                  <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                    {p.description || metadata.description}
                  </p>
                </div>
                <svg class="w-5 h-5 text-gray-400 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  )}
</Layout>

<script is:inline>
  // Copy to clipboard functionality
  const initCopyButtons = () => {
    document.querySelectorAll('.copy-btn').forEach((btn) => {
      btn.addEventListener('click', async () => {
        const code = btn.dataset.code;
        if (!code) return;

        try {
          await navigator.clipboard.writeText(code);
          btn.innerHTML = `
            <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
          `;
          setTimeout(() => {
            btn.innerHTML = `
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            `;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  };

  initCopyButtons();
  document.addEventListener('astro:after-swap', initCopyButtons);
</script>
