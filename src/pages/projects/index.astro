---
/**
 * Projects Page
 * 
 * Grid/list of all projects with filtering and sorting.
 */
import Layout from '../../layouts/Layout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { getAllRepoMetadata } from '../../lib/github';

// Fetch metadata for all projects
const allProjects = await getAllRepoMetadata();

// Get unique languages for filtering
const languages = [...new Set(allProjects.map(p => p.language).filter(Boolean))] as string[];

// Get unique statuses for filtering
const statuses = [...new Set(allProjects.map(p => p.status))];
---

<Layout 
  title="Projects"
  description="Explore all Siderust projects and Rust crates. High-quality, well-documented libraries for the modern developer."
>
  <!-- Header Section -->
  <section class="pt-16 pb-8 md:pt-20 md:pb-10 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-950">
    <div class="container-custom">
      <div class="max-w-4xl">
        <h1 class="section-heading">Projects</h1>
        <p class="section-subheading">
          Explore our ecosystem of mission-critical astronomical computation libraries.
        </p>
        
      </div>
    </div>
  </section>

  <!-- Filters & Projects Section -->
  <section class="pt-8 pb-12 md:pt-10 md:pb-16 bg-white dark:bg-gray-950">
    <div class="container-custom">
      <!-- Filters -->
      <div id="filters" class="mb-8 p-4 rounded-xl bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-800">
        <div class="flex flex-col md:flex-row gap-4">
          <!-- Search -->
          <div class="flex-1">
            <label for="search" class="sr-only">Search projects</label>
            <div class="relative">
              <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <input
                type="text"
                id="search"
                placeholder="Search projects..."
                class="w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
              />
            </div>
          </div>

          <!-- Language filter -->
          <div class="w-full md:w-48">
            <label for="filter-language" class="sr-only">Filter by language</label>
            <select
              id="filter-language"
              class="w-full px-4 py-2.5 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
            >
              <option value="">All languages</option>
              {languages.map(lang => (
                <option value={lang}>{lang}</option>
              ))}
            </select>
          </div>

          <!-- Status filter -->
          <div class="w-full md:w-48">
            <label for="filter-status" class="sr-only">Filter by status</label>
            <select
              id="filter-status"
              class="w-full px-4 py-2.5 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent capitalize"
            >
              <option value="">All statuses</option>
              {statuses.map(status => (
                <option value={status} class="capitalize">{status}</option>
              ))}
            </select>
          </div>

          <!-- Sort -->
          <div class="w-full md:w-48">
            <label for="sort" class="sr-only">Sort by</label>
            <select
              id="sort"
              class="w-full px-4 py-2.5 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
            >
              <option value="stars">Most stars</option>
              <option value="updated">Last updated</option>
              <option value="name">Name</option>
            </select>
          </div>
        </div>

        <!-- Quick filters -->
        <div class="mt-4 flex flex-wrap gap-2">
          <button
            type="button"
            data-filter="has-docs"
            class="filter-chip px-3 py-1.5 text-sm rounded-full border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
          >
            Has docs
          </button>
          <button
            type="button"
            data-filter="has-releases"
            class="filter-chip px-3 py-1.5 text-sm rounded-full border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
          >
            Has releases
          </button>
        </div>
      </div>

      <!-- Results count -->
      <div class="mb-6 text-sm text-gray-500 dark:text-gray-400">
        <span id="results-count">{allProjects.length}</span> projects found
      </div>

      <!-- Projects Grid -->
      <div id="projects-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {allProjects.map((project) => (
          <div 
            class="project-card"
            data-name={project.name.toLowerCase()}
            data-display-name={project.displayName.toLowerCase()}
            data-description={project.description.toLowerCase()}
            data-language={project.language?.toLowerCase() || ''}
            data-status={project.status}
            data-stars={project.stars}
            data-updated={project.lastUpdated}
            data-has-docs={project.hasDocs}
            data-has-releases={project.hasReleases}
          >
            <ProjectCard project={project} />
          </div>
        ))}
      </div>

      <!-- Empty state -->
      <div id="empty-state" class="hidden py-16 text-center">
        <div class="w-16 h-16 mx-auto rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
          <svg class="w-8 h-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900 dark:text-white">No projects found</h3>
        <p class="mt-2 text-gray-500 dark:text-gray-400">Try adjusting your search or filter criteria.</p>
        <button
          type="button"
          id="reset-filters"
          class="mt-4 btn-ghost text-brand-600 dark:text-brand-400"
        >
          Reset filters
        </button>
      </div>

    </div>
  </section>
</Layout>

<script is:inline>
  const initProjectFilters = () => {
    const searchInput = document.getElementById('search');
    const languageFilter = document.getElementById('filter-language');
    const statusFilter = document.getElementById('filter-status');
    const sortSelect = document.getElementById('sort');
    const filterChips = document.querySelectorAll('.filter-chip');
    const projectCards = document.querySelectorAll('.project-card');
    const resultsCount = document.getElementById('results-count');
    const emptyState = document.getElementById('empty-state');
    const projectsGrid = document.getElementById('projects-grid');
    const resetButton = document.getElementById('reset-filters');

    // Active quick filters
    const activeFilters = new Set();

    const filterAndSort = () => {
      const searchTerm = searchInput?.value?.toLowerCase() || '';
      const language = languageFilter?.value?.toLowerCase() || '';
      const status = statusFilter?.value || '';
      const sortBy = sortSelect?.value || 'stars';

      let visibleCount = 0;
      const cardsToSort = [];

      projectCards.forEach((card) => {
        const name = card.dataset.name || '';
        const displayName = card.dataset.displayName || '';
        const description = card.dataset.description || '';
        const cardLanguage = card.dataset.language || '';
        const cardStatus = card.dataset.status || '';
        const hasDocs = card.dataset.hasDocs === 'true';
        const hasReleases = card.dataset.hasReleases === 'true';

        // Apply filters
        const matchesSearch = !searchTerm || 
          name.includes(searchTerm) || 
          displayName.includes(searchTerm) || 
          description.includes(searchTerm);
        const matchesLanguage = !language || cardLanguage === language;
        const matchesStatus = !status || cardStatus === status;
        const matchesHasDocs = !activeFilters.has('has-docs') || hasDocs;
        const matchesHasReleases = !activeFilters.has('has-releases') || hasReleases;

        const isVisible = matchesSearch && matchesLanguage && matchesStatus && matchesHasDocs && matchesHasReleases;
        
        if (isVisible) {
          visibleCount++;
          cardsToSort.push(card);
        }
        
        card.style.display = isVisible ? '' : 'none';
      });

      // Sort visible cards
      cardsToSort.sort((a, b) => {
        switch (sortBy) {
          case 'stars':
            return parseInt(b.dataset.stars || '0') - parseInt(a.dataset.stars || '0');
          case 'updated':
            return new Date(b.dataset.updated || 0).getTime() - new Date(a.dataset.updated || 0).getTime();
          case 'name':
            return (a.dataset.displayName || '').localeCompare(b.dataset.displayName || '');
          default:
            return 0;
        }
      });

      // Reorder DOM
      cardsToSort.forEach(card => {
        projectsGrid?.appendChild(card);
      });

      // Update count and empty state
      if (resultsCount) {
        resultsCount.textContent = visibleCount.toString();
      }
      
      if (emptyState && projectsGrid) {
        emptyState.classList.toggle('hidden', visibleCount > 0);
        projectsGrid.classList.toggle('hidden', visibleCount === 0);
      }
    };

    // Event listeners
    searchInput?.addEventListener('input', filterAndSort);
    languageFilter?.addEventListener('change', filterAndSort);
    statusFilter?.addEventListener('change', filterAndSort);
    sortSelect?.addEventListener('change', filterAndSort);

    filterChips.forEach(chip => {
      chip.addEventListener('click', () => {
        const filter = chip.dataset.filter;
        if (!filter) return;

        if (activeFilters.has(filter)) {
          activeFilters.delete(filter);
          chip.classList.remove('bg-brand-100', 'dark:bg-brand-900/30', 'text-brand-700', 'dark:text-brand-400', 'border-brand-200', 'dark:border-brand-800');
          chip.classList.add('bg-white', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300', 'border-gray-200', 'dark:border-gray-700');
        } else {
          activeFilters.add(filter);
          chip.classList.add('bg-brand-100', 'dark:bg-brand-900/30', 'text-brand-700', 'dark:text-brand-400', 'border-brand-200', 'dark:border-brand-800');
          chip.classList.remove('bg-white', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300', 'border-gray-200', 'dark:border-gray-700');
        }

        filterAndSort();
      });
    });

    resetButton?.addEventListener('click', () => {
      if (searchInput) searchInput.value = '';
      if (languageFilter) languageFilter.value = '';
      if (statusFilter) statusFilter.value = '';
      if (sortSelect) sortSelect.value = 'stars';
      
      activeFilters.clear();
      filterChips.forEach(chip => {
        chip.classList.remove('bg-brand-100', 'dark:bg-brand-900/30', 'text-brand-700', 'dark:text-brand-400', 'border-brand-200', 'dark:border-brand-800');
        chip.classList.add('bg-white', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300', 'border-gray-200', 'dark:border-gray-700');
      });

      filterAndSort();
    });

    // Initial sort
    filterAndSort();
  };

  initProjectFilters();
  document.addEventListener('astro:after-swap', initProjectFilters);
</script>
