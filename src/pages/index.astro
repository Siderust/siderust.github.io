---
/**
 * Home Page
 * 
 * Landing page with hero section and featured projects.
 */
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import siteConfig, { getFeaturedProjects } from '../site.config';
import { getAllRepoMetadata } from '../lib/github';

// Fetch metadata for all projects
const allMetadata = await getAllRepoMetadata();

// Get featured projects
const featuredRepos = getFeaturedProjects().map(p => p.repo);
const featuredProjects = allMetadata.filter(m => featuredRepos.includes(m.name));
---

<Layout>
  <!-- Hero Section -->
  <section class="relative hero-gradient grid-pattern overflow-hidden">
    <div class="container-custom py-20 md:py-32 lg:py-40">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-100 dark:bg-brand-900/30 text-brand-700 dark:text-brand-400 text-sm font-medium mb-6 animate-fade-in">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-brand-500"></span>
          </span>
          Open Source Rust Libraries
        </div>

        <!-- Heading -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight animate-fade-in">
          <span class="gradient-text">{siteConfig.name}</span>
        </h1>
        
        <!-- Tagline -->
        <p class="mt-6 text-xl md:text-2xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto animate-fade-in animation-delay-100">
          {siteConfig.tagline}
        </p>

        <!-- CTA Buttons -->
        <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in animation-delay-200">
          <a href="/projects" class="btn-primary text-lg px-8 py-3">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            Explore Projects
          </a>
          <a 
            href={siteConfig.orgUrl} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="btn-secondary text-lg px-8 py-3"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            View on GitHub
          </a>
        </div>
      </div>
    </div>

    <!-- Decorative gradient orbs -->
    <div class="absolute top-1/4 left-0 w-96 h-96 bg-brand-400/20 rounded-full blur-3xl -z-10" aria-hidden="true"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-rust-400/20 rounded-full blur-3xl -z-10" aria-hidden="true"></div>
  </section>

  <!-- What We Build Section -->
  <section class="py-20 md:py-28 bg-white dark:bg-gray-950">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="section-heading">What we build</h2>
        <p class="section-subheading mx-auto">
          {siteConfig.description}
        </p>
      </div>

      <!-- Feature highlights -->
      <div class="mt-16 grid md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="w-12 h-12 mx-auto rounded-xl bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center text-brand-600 dark:text-brand-400">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="mt-4 font-semibold text-lg text-gray-900 dark:text-white">Performance First</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">
            Zero-cost abstractions and SIMD optimizations where it counts. Built for speed without sacrificing safety.
          </p>
        </div>

        <div class="text-center p-6">
          <div class="w-12 h-12 mx-auto rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="mt-4 font-semibold text-lg text-gray-900 dark:text-white">Type Safe</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">
            Leverage Rust's powerful type system for compile-time guarantees and fearless refactoring.
          </p>
        </div>

        <div class="text-center p-6">
          <div class="w-12 h-12 mx-auto rounded-xl bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600 dark:text-green-400">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="mt-4 font-semibold text-lg text-gray-900 dark:text-white">Well Documented</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">
            Comprehensive documentation with examples. We believe great docs are as important as great code.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-20 md:py-28 bg-gray-50 dark:bg-gray-900/50">
    <div class="container-custom">
      <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4 mb-12">
        <div>
          <h2 class="section-heading">Featured Projects</h2>
          <p class="section-subheading">
            Our most popular and actively maintained libraries.
          </p>
        </div>
        <a href="/projects" class="btn-ghost text-brand-600 dark:text-brand-400 shrink-0">
          View all projects
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredProjects.map((project, i) => (
          <div class="animate-slide-up" style={`animation-delay: ${i * 100}ms`}>
            <ProjectCard project={project} featured />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-28 bg-white dark:bg-gray-950">
    <div class="container-custom">
      <div class="relative rounded-2xl bg-gradient-to-br from-brand-600 to-rust-600 p-8 md:p-12 lg:p-16 text-center overflow-hidden">
        <!-- Background pattern -->
        <div class="absolute inset-0 grid-pattern opacity-10" aria-hidden="true"></div>
        
        <div class="relative z-10">
          <h2 class="text-3xl md:text-4xl font-bold text-white">
            Ready to get started?
          </h2>
          <p class="mt-4 text-lg text-white/80 max-w-2xl mx-auto">
            Check out our projects, browse the documentation, or contribute to make Rust development even better.
          </p>
          <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="/projects" class="btn bg-white text-brand-700 hover:bg-gray-100 px-8 py-3">
              Browse Projects
            </a>
            <a href="/about#contributing" class="btn bg-white/10 text-white hover:bg-white/20 px-8 py-3">
              Learn to Contribute
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
