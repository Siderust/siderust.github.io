---
import { siteConfig } from '../../site.config';
---

<footer class="border-t border-slate-200 dark:border-slate-800 py-8 mt-auto">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-slate-500 dark:text-slate-400">
        &copy; {new Date().getFullYear()} {siteConfig.org}. Built with Astro & Tailwind.
      </p>
      <div class="flex gap-6">
        <a href={siteConfig.social.github} class="text-sm text-slate-500 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-100">
          GitHub
        </a>
      </div>
    </div>
  </div>
</footer>
