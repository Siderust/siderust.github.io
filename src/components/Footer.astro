---
/**
 * Footer Component
 * 
 * Site footer with links and attribution.
 */
import siteConfig from '../site.config';

const currentYear = new Date().getFullYear();

const footerLinks = {
  organization: [
    { label: 'GitHub', href: siteConfig.orgUrl },
    { label: 'Issues', href: `${siteConfig.orgUrl}/.github/issues` },
    { label: 'Discussions', href: `${siteConfig.orgUrl}/.github/discussions` },
  ],
  projects: siteConfig.projects.map((p) => ({
    label: p.name || p.repo,
    href: `/projects/${p.repo}`,
  })),
  resources: [
    { label: 'About', href: '/about' },
    { label: 'Contributing', href: '/about#contributing' },
    { label: 'License', href: `${siteConfig.orgUrl}/.github/blob/main/LICENSE` },
    ...(siteConfig.sponsorship?.enabled ? [{ label: 'Sponsor', href: '/sponsor' }] : []),
  ],
};
---

<footer class="border-t border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50">
  <div class="container-custom py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-2 font-bold text-lg">
          <span class="text-xl">⚙️</span>
          <span class="gradient-text">{siteConfig.name}</span>
        </a>
        <p class="mt-3 text-sm text-gray-600 dark:text-gray-400 max-w-xs">
          {siteConfig.tagline}
        </p>
        <div class="mt-4 flex gap-3">
          <a
            href={siteConfig.orgUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </a>
          {siteConfig.sponsorship?.enabled && siteConfig.sponsorship?.githubSponsorsUrl && (
            <a
              href={siteConfig.sponsorship.githubSponsorsUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors"
              aria-label="GitHub Sponsors"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Organization links -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white text-sm">Organization</h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.organization.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Projects links -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white text-sm">Projects</h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.projects.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources links -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white text-sm">Resources</h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-500 dark:text-gray-400">
          &copy; {currentYear} {siteConfig.name}. All rights reserved.
        </p>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="hover:text-gray-900 dark:hover:text-white transition-colors">Astro</a> &amp; <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="hover:text-gray-900 dark:hover:text-white transition-colors">Tailwind CSS</a>
        </p>
      </div>
    </div>
  </div>
</footer>
